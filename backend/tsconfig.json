{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist/backend",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "Node",
    "resolveJsonModule": true, 
    "allowJs": true,                  
    "esModuleInterop": true,
  },
  "include": ["../shared/src", "types/*.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
